@model Post

<h1>Make a New Post!</h1>

<form asp-controller="Home" asp-action="SubmitPost" method="post">
    <div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control">
    <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
    <label asp-for="Link"></label>
    <input asp-for="Link" class="form-control">
    <span asp-validation-for="Link"></span>
    </div>

    <div class="form-group">
    <label asp-for="Topic"></label>
    <input asp-for="Topic" class="form-control">
    <span asp-validation-for="Topic"></span>
    </div>

    <input type="submit" class="btn btn-lg btn-primary" value="Add Post">
</form>